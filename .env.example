# Required: Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=

# Required: Service account JSON — path to file or raw JSON string (for Docker)
GOOGLE_SERVICE_ACCOUNT_JSON=

# Required: Default Google Drive folder ID (used when no topic is set)
DEFAULT_DRIVE_FOLDER_ID=

# Optional: Max file size in bytes (default 20971520 = 20 MB)
MAX_FILE_SIZE_BYTES=20971520

# Optional: Comma-separated MIME types; empty = allow common types
# ALLOWED_MIME_TYPES=image/jpeg,image/png,video/mp4,application/pdf

# Optional: Text format — "txt" or "doc" (default txt)
TEXT_FORMAT=txt

# Optional: Send detailed error messages to users (default false)
SEND_DETAILED_ERRORS=false

# Optional: Log level — DEBUG, INFO, WARNING, ERROR (default INFO)
LOG_LEVEL=INFO
